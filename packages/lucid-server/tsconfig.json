{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"types": ["bun-types", "@types/better-sqlite3"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
